<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Explorer Sauvage</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Explorer Sauvage</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <% if (user.role === "admin") { %>
                <li class="nav-item">
                  <a class="nav-link" href="/inventory">Inventory</a>
                </li> 
                <li class="nav-item">
                  <a class="nav-link" href="/addFragrance">Add new fragrance</a>
                </li> 
              <% } %>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>

    <div class="container">
        <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
        <br>
        <div class="text-center"><h2>Fragrance Details</h2></div>
        <br>
        <% if (fragrance) { %> <!-- Check if fragrance data exists -->
            <div>
                <p><b>Fragrance Name:</b><br> <%= fragrance.fragranceName %></p>
                <p><b>Price:</b><br> $<%= fragrance.price.toFixed(2)%></p> 
                <p><b>Fragrance Quantity:</b><br> <%= fragrance.quantity %></p>
                <p><b>Fragrance Description:</b><br> <%= fragrance.fragranceDescription %></p>
                <p><b>Fragrance Image:</b><br>
                    <% if (fragrance.image && fragrance.image.startsWith('http')) { %>
                        <img src="<%= fragrance.image %>" alt="<%= fragrance.fragranceName %>" width="20%">
                    <% } else { %>
                        <img src="/images/<%= fragrance.image %>" alt="<%= fragrance.fragranceName %>" width="20%">
                    <% } %>
                </p>
            </div>
        <% } else { %>
            <p>No fragrance found.</p>
        <% } %>
        <% if (user.role === "admin") { %>
          <a href ="/inventory">Back</a>
        <% } else { %>
          <a href ="/shopping">Back</a>
        <% } %>
    </div>
    
</body>
</html>
