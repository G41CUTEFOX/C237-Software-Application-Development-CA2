<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Explorer Sauvage</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cart Content -->
  <div class="container">
    <h2 class="mt-4">Shopping Cart</h2>
    <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered text-center">
        <thead>
          <tr>
            <th>Image</th>
            <th>Fragrance</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% cart.forEach(item => { %>
            <tr>
              <td>
                <% if (item.image && item.image.startsWith('http')) { %>
                  <img src="<%= item.image %>" width="80" class="img-thumbnail">
                <% } else { %>
                  <img src="/images/<%= item.image || 'default.jpg' %>" width="80" class="img-thumbnail">
                <% } %>
              </td>
              <td><%= item.fragranceName %></td>
              <% total += Number(item.price) * item.quantity; %>
              <td>$<%= (Number(item.price) * item.quantity).toFixed(2) %></td>
              <td><%= item.quantity %></td>
              <td>
                <form action="/remove-from-cart/<%= item.fragranceId %>" method="POST">
                  <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>

      <h4>Total: $<%= total.toFixed(2) %></h4>

      <div class="mt-4">
        <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
      </div>
    <% } %>
  </div>
</body>
</html>
