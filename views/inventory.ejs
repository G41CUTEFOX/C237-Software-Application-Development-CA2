<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>ES Inventory</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ES Inventory</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addFragrance">Add Fragrance</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Fragrances from Explorer Sauvage Database</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Fragrance Name</th>
            <th width="100">Fragrance Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < fragrances.length; i++) { %>
          <tr>
            <!-- Fragrance Name (Clickable Link) -->
            <td>
              <a href="/fragrance/<%= fragrances[i].fragranceId %>">
                <%= fragrances[i].fragranceName %>
              </a>
            </td>

            <!-- Fragrance Image -->
            <td>
              <% if (fragrances[i].image && fragrances[i].image.startsWith('http')) { %>
                <img src="<%= fragrances[i].image %>" alt="<%= fragrances[i].fragranceName %>" width="70">
              <% } else { %>
                <img src="/images/<%= fragrances[i].image || 'default.jpg' %>" alt="<%= fragrances[i].fragranceName %>" width="70">
              <% } %>
            </td>

            <!-- Quantity -->
            <td><%= fragrances[i].quantity %></td>

            <!-- Price -->
            <td>$<%= fragrances[i].price ? parseFloat(fragrances[i].price).toFixed(2) : '0.00' %></td>

            <!-- Edit Link -->
            <td><a href="/updateFragrance/<%= fragrances[i].fragranceId %>">Edit</a></td>

            <!-- Delete Link -->
            <td><a href="/deleteFragrance/<%= fragrances[i].fragranceId %>" onclick="return confirm('Are you sure you want to delete this Fragrance?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
